generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String           @id @default(cuid())
  supabaseId  String
  timezone    String
  email       String           @unique
  logs        Log[]
  moods       Mood[]
  tasks       Task[]
  preferences UserPreferences?
}

model Task {
  id             String          @id @default(cuid())
  title          String
  description    String
  recurrence     Boolean
  userId         String
  completed      Boolean         @default(false)
  duration       Int
  startDate      DateTime
  logs           Log[]
  recurrenceInfo RecurrenceInfo?
  sortingInfo    SortingInfo?
  user           User            @relation(fields: [userId], references: [id])
}

model RecurrenceInfo {
  id                 String         @id @default(cuid())
  taskId             String         @unique
  type               RecurrenceType
  freq               Int
  fromLastCompletion Boolean
  byDay              String[]
  end                Int?
  bySetPos           Int?
  endDate            DateTime?
  endType            Int
  lastCompletionDate DateTime?
  task               Task           @relation(fields: [taskId], references: [id])
}

model SortingInfo {
  id         String @id @default(cuid())
  taskId     String @unique
  priority   Int
  difficulty Int
  location   String
  task       Task   @relation(fields: [taskId], references: [id])
}

model Mood {
  id     String @id @default(cuid())
  mood   Int
  userId String
  logs   Log[]
  user   User   @relation(fields: [userId], references: [id])
}

model Log {
  id        String   @id @default(cuid())
  type      LogType
  itemId    String?
  moodId    String?
  timestamp DateTime
  userId    String?
  note      String?
  task      Task?    @relation(fields: [itemId], references: [id])
  mood      Mood?    @relation(fields: [moodId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])
}

model UserPreferences {
  id       String @id @default(cuid())
  range0   Int
  range1   Int
  textSize Int
  userId   String @unique
  user     User   @relation(fields: [userId], references: [id])
}

enum RecurrenceType {
  DAILY
  MONTHLY
  WEEKLY
  HOURLY
  MINUTELY
  YEARLY
  BYMONTHDAY
}

enum LogType {
  task
  mood
  app_update
}
